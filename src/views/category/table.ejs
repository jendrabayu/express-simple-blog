<div class="table-responsive">
  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
      <tr>
        <th>No.</th>
        <th>Nama</th>
        <th>Total Post</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% for( let i=0; i < categories.data.length; i++ ) { %>
      <tr>
        <td><%= 1+ (categories.first_item + i) %></td>
        <td><%= categories.data[i].name %></td>
        <td><%= categories.data[i].posts_count %></td>
        <td><%= moment(categories.data[i].createdAt) .format('DD-MM-YYYY hh:mm') %></td>
        <td><%= moment(categories.data[i].updatedAt).format('DD-MM-YYYY hh:mm') %></td>
        <td>
          <button
            class="btn btn-primary btn-circle btn-sm btn-edit"
            data-id="<%= categories.data[i].id %>"
            data-name="<%= categories.data[i].name %>"
          >
            <i class="fas fa-edit"></i>
          </button>
          <button
            class="btn btn-danger btn-circle btn-sm btn-delete"
            data-id="<%= categories.data[i].id %>"
          >
            <i class="fas fa-trash-alt"></i>
          </button>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
